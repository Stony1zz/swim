<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/icon_login_bg"
    >

    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:background="@mipmap/icon_login_edbg"
        >
        <EditText
            android:id="@+id/regist_account"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="手机号"
            android:textStyle="bold"
            android:textSize="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@mipmap/icon_login_edbg"
        >
        <EditText
            android:id="@+id/regist_password"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="密码"
            android:textStyle="bold"
            android:textSize="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@mipmap/icon_login_edbg"
        >
        <EditText
            android:id="@+id/regist_name"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="姓名"
            android:textStyle="bold"
            android:textSize="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@mipmap/icon_login_edbg"
        >
        <EditText
            android:id="@+id/regist_sex"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="性别"
            android:textStyle="bold"
            android:textSize="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@mipmap/icon_login_edbg"
        >
        <EditText
            android:id="@+id/regist_deep"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="下水等级"
            android:textStyle="bold"
            android:textSize="20dp"
            />
    </LinearLayout>
    <Button
        android:id="@+id/regist_btn"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="35dp"
        android:textColor="@color/colorGrayalpha"
        android:text="注册"
        android:background="@drawable/login_btn"
        />
</LinearLayout>