<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/icon_house_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
        <ImageView
            android:id="@+id/house_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/icon_house_back"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="房舍信息"
            android:textSize="28dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="94dp"
            android:layout_gravity="center"
            />
        <ImageView
            android:id="@+id/house_add"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/icon_house_add"
            android:layout_marginLeft="90dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/house_ligth"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@mipmap/icon_house_top"
                />
            <TextView
                android:id="@+id/text_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="光照"
                android:layout_marginTop="-50dp"
                android:layout_marginLeft="19dp"
                android:textSize="20dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/house_tem"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/icon_house_top"
                />
            <TextView
                android:id="@+id/text_tem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="温度"
                android:layout_marginTop="-50dp"
                android:layout_marginLeft="29dp"
                android:textSize="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/house_shidu"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/icon_house_top"
                />
            <TextView
                android:id="@+id/text_shidu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="湿度"
                android:layout_marginTop="-50dp"
                android:layout_marginLeft="29dp"
                android:textSize="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/house_nongdu"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/icon_house_top"
                />
            <TextView
                android:id="@+id/text_nongdu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="浓度"
                android:layout_marginTop="-50dp"
                android:layout_marginLeft="29dp"
                android:textSize="20dp"
                />
        </LinearLayout>

        </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/house_recycle"
        android:layout_marginTop="90dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>